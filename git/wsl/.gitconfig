; `git lfs install` 실행시 자동으로 지정된 설정입니다.
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[user]
	name = 박경은
	email = ; 사용하는 이메일 기입

[core]
	autocrlf = input
	; shell의 alias으로는 반영이 안되서 여기에서 명확하게 지정하도록 합니다.
	editor = nvim
	; [한글 파일명인 경우 발생하는 이슈를 대응하기 위함](https://subicura.com/mac/dev/intel.html#git)
	precomposeunicode = true
	quotepath = false

[init]
	defaultBranch = main

[alias]
	ch = "!git checkout $(git branch | fzf)"
	; -r 으로 하면 HEAD으로 이동해서 어색함 remote만 선택할 수 있는 것이 있는지 찾아보기
	chr = "!git checkout $(git branch -r | fzf)"
	sync = "!git fetch && git pull"
	; TODO: branch 정리하는 것

; WSL에서 Windows 자격 증명 관리자를 사용하기 위함
[credential]
	helper = /mnt/c/Program\\ Files/Git/mingw64/bin/git-credential-manager-core.exe
[credential "https://dev.azure.com"]
	useHttpPath = true
